- if target && target.errors.any?
  #errorExplanation.errorExplanation
    %h2
      = t(".errors_prohibited_this_record_from_being_saved", count: target.errors.count)
    %p
      = t(".there_were_problems_with_the_following_fields")
      \:
    %ul
      - target.errors.full_messages.each do |msg|
        - if msg.include?('Password confirmation')
          %li= msg.gsub("Password confirmation", t(".password_confirmation_string"))
        - elsif msg.include?('Password')
          %li= msg.gsub("Password", t(".password_string"))
        - else
          %li= msg